<tr id="<%= job.id %>">
   <td><%= job.title %></td>
   <td><%= job.description %></td>
   <td>
       <%= link_to "Edit", edit_job_path(job), data: { toggle: "modal", target: "#myModal" } , class: "btn btn-primary btn-xs" %>
   </td>
   <td><%= link_to job, remote: true, method: :delete  do %>
            <button class="btn btn-danger btn-xs delete">Delete!</button>
        <% end %>

        <script>
          $('.delete').on('click', function(){
               $(this).closest("tr").remove();
               $('#index-flash-content').remove();
               $('.index-notice').remove();
               $('#index-flash').append($("<div id='index-notice'/>").addClass("col-md-12 column alert alert-success index-notice").text("Job was successfully removed!"));

          });
        </script>
   </td>
</tr>



